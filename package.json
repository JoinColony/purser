        "denodeify": "1.2.1",
        "eslint": "6.8.0",
        "eslint-config-airbnb-base": "14.1.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-eslint-comments": "3.1.2",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jest": "^23.9.0",
        "eslint-plugin-prettier": "3.1.3",
        "find-imports": "1.1.0",
        "fs-extra": "8.1.0",
        "husky": "4.2.3",
        "jest": "25.1.0",
        "jest-sandbox": "1.1.2",
        "lerna": "^3.20.2",
        "lint-staged": "10.0.8",
        "prettier": "2.0.5",
