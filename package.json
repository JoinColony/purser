{
  "name": "purser",
  "private": true,
  "version": "2.5.1",
  "description": "Interact with Ethereum wallets easily",
  "scripts": {
    "build": "node scripts/build-all-modules.js",
    "update-modules": "node scripts/update-all-packages-json.js",
    "populate-modules": "node scripts/populate-all-modules.js",
    "release-modules": "sh scripts/publish-to-npm.sh",
    "flow": "flow",
    "glow": "glow",
    "glow:watch": "glow --watch",
    "flow:check": "flow check",
    "flow:ci": "flow --json | flow-junit-transformer > reports/flow/flow-results.xml",
    "lint": "eslint modules/**/*.js",
    "lint:fix": "eslint modules/**/*.js --fix",
    "lint:ci": "eslint --format junit -o reports/eslint/eslint-results.xml modules/**/*.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watchAll --verbose",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --no-cache --ci --bail --verbose=true --maxWorkers 2 --reporters='jest-junit'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoinColony/purser.git"
  },
  "author": "Raul Glogovetan <raul@colony.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JoinColony/purser/issues"
  },
  "homepage": "https://github.com/JoinColony/purser",
  "keywords": [
    "ethereum",
    "javascript",
    "wallet",
    "colony",
    "software-wallet",
    "monorepo",
    "purser"
  ],
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@colony/eslint-config-colony": "^7.0.0",
    "@kironeducation/flow-junit-transformer": "^0.3.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.4.2",
    "babel-plugin-dynamic-import-node": "^2.1.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "camelcase": "^5.2.0",
    "chalk": "^2.3.1",
    "chokidar": "^3.0.0",
    "denodeify": "^1.2.1",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-flowtype": "^3.11.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "find-imports": "^1.0.0",
    "flow-bin": "^0.103.0",
    "flow-copy-source": "^2.0.0",
    "fs-extra": "^8.0.1",
    "glow": "^1.2.2",
    "husky": "^3.0.0",
    "jest": "^23.5.0",
    "jest-junit": "^6.0.0",
    "jest-sandbox": "^1.1.1",
    "lint-staged": "8.0.4",
    "prettier": "^1.15.2",
    "regenerator-runtime": "^0.13.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "@ledgerhq/hw-app-eth": "^4.68.2",
    "@ledgerhq/hw-transport-u2f": "^4.68.2",
    "await-transaction-mined": "^1.0.12",
    "bip32-path": "^0.4.2",
    "bn.js": "^5.0.0",
    "ethereumjs-common": "^1.3.0",
    "ethereumjs-tx": "^2.1.0",
    "ethereumjs-util": "^6.0.0",
    "ethers": "^4.0.33",
    "hdkey": "^1.1.0",
    "lodash.isequal": "^4.5.0",
    "web3": "1.0.0-beta.36"
  },
  "greenkeeper": {
    "ignore": [
        "eslint-plugin-import",
        "lint-staged"
    ]
  }
}
